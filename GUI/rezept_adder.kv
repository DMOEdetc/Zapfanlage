#:kivy 1.10.1

<rezept_adder>:
    auto_dismiss: False
    title: 'Cocktail hinzufügen'
    size_hint: (.60, .80)
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 1)

            ScrollView:
                do_scroll_x: False

                # Standardinhalt des Rezeptadders
                GridLayout:
                    cols: 1
                    spacing: ('0dp', '10dp')
                    padding: ('10dp', '2dp')
                    size_hint: (1, None)
                    height: self.minimum_height

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        Label:
                            size_hint: 1, None
                            text_size: self.width, None
                            size: self.texture_size
                            halign: 'left'
                            text: 'Name des Cocktails:'
                        TextInput:
                            size_hint: 1, None
                            height: '30dp'
                            multiline: False

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        Label:
                            size_hint: 1, None
                            text_size: self.width, None
                            size: self.texture_size
                            halign: 'left'
                            text: 'Beschreibung:'
                        TextInput:
                            size_hint: 1, None
                            height: max(self.minimum_height, self.height)

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        Label:
                            size_hint: 1, None
                            text_size: self.width, None
                            size: self.texture_size
                            halign: 'left'
                            text: 'Zubereitung:'
                        TextInput:
                            size_hint: 1, None
                            height: max(self.minimum_height, self.height)

                    # Ab hier plazieren der Widgets

                    ZutatenSpinner:
                    ZutatenSpinner:

        # Fusßzeile des Rezeptadders
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '30dp'
            Button:
                text: 'Abbrechen'
                on_release: root.dismiss()
            Button:
                text: 'Speichern'



# Widgets für den Adder
<ZutatenSpinner>:
    cols: 1
    size_hint: (1, None)
    height: self.minimum_height
    Spinner:
        name: root.Zutatenart
        text: 'Weitere Zutat hinzufügen'
        values: root.zutatenart_list
        on_text: root.on_zutaten_spinner_select(self.text, self.name)

    Spinner:
        name: root.Zutat
        text: 'Bitte wählen'
        values: root.zutaten_list
        on_text: root.on_zutaten_spinner_select(self.text, self.name)

<Spirituosen_adder>:
    cols: 1
    size_hint: (1, None)
    height: self.minimum_height

    Label:
        text_size: self.width, None
        text: 'Alkoholische Zutaten'
    Button:
        text: 'sdfgsdfgsdfgsdfg'

