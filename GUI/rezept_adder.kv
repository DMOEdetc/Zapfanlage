#:kivy 1.11.1
# -*- coding: utf-8 -*-

<rezept_adder>:
    auto_dismiss: False
    title: 'Cocktail hinzufügen'
    size_hint: (.60, .80)
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 1)

            ScrollView:
                do_scroll_x: False

                # Standardinhalt des Rezeptadders
                GridLayout:
                    cols: 1
                    spacing: ('0dp', '10dp')
                    padding: ('10dp', '2dp')
                    size_hint: (1, None)
                    height: self.minimum_height

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        Label:
                            size_hint: 1, None
                            text_size: self.width, None
                            size: self.texture_size
                            halign: 'left'
                            text: 'Name des Cocktails:'
                        TextInput:
                            size_hint: 1, None
                            height: '30dp'
                            multiline: False

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        Label:
                            size_hint: 1, None
                            text_size: self.width, None
                            size: self.texture_size
                            halign: 'left'
                            text: 'Beschreibung:'
                        TextInput:
                            size_hint: 1, None
                            height: max(self.minimum_height, self.height)

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        Label:
                            size_hint: 1, None
                            text_size: self.width, None
                            size: self.texture_size
                            halign: 'left'
                            text: 'Zubereitung:'
                        TextInput:
                            size_hint: 1, None
                            height: max(self.minimum_height, self.height)

                    # Ab hier plazieren der Widgets
                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        spacing: ('0dp', '10dp')
                        Zutaten_Selector:

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: self.minimum_height
                        id: rezept_adder_space

                    GridLayout:
                        cols: 1
                        size_hint: (1, None)
                        height: '30dp'
                        Button:
                            text: 'Weitere Zutat'
                            on_release: root.weitere_Zutat()
              

        # Fusßzeile des Rezeptadders
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '30dp'
            Button:
                text: 'Abbrechen'
                on_release: root.dismiss()
            Button:
                text: 'Speichern'


# Widgets für den Adder
<Zutaten_Selector>:
    cols: 2
    size_hint: (1, None)
    height: self.minimum_height
    name: root.Zutatennummer
    Spinner:
        size_hint: .4, None
        height: '30dp'
        text: 'Typ wählen'
        name: root.Zutatennummer
        values: root.zutatenart_list
        on_text: root.on_zutatenart_spinner_select(self.text, self.name)

    Spinner:
        size_hint: .6, None
        height: '30dp'
        name: root.Zutatennummer
        text: 'Bitte erst Typ wählen'
        values: root.zutaten_list

    Label:
        size_hint: .4, None
        size: self.texture_size
        halign: 'left'
        text: 'Menge (ml/stk): '
    TextInput:
        size_hint: .6, None
        height: '30dp'
        multiline: False


