#:kivy 1.10.1

<rezept_adder>:
    auto_dismiss: False
    title: 'Cocktail hinzufügen'
    size_hint: (.60, .80)
    BoxLayout:
        orientation: 'vertical'
        
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size_hint: 1, 1

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: 1, None

                GridLayout:
                    orientation: 'tb-lr'
                    size_hint: 1, 1

                    GridLayout:
                        cols: 2
                        size_hint: 1, None
                        height: self.minimum_height
                    
                        Label:
                            size_hint: .2, None
                            height: '30dp'
                            text_size: self.width, None
                            text: 'Name des Cocktails:'
                        TextInput:
                            size_hint: 1.8, None
                            height: '30dp'
                            multiline: False

                        Label:
                            text_size: self.width, None
                            text: 'Beschreibung:'
                        TextInput:
                            size_hint: 1, None
                            height: max(self.minimum_height, self.height)

                        Label:
                            text_size: self.width, None
                            text: 'Zubereitung:'
                        TextInput:
                            size_hint: 1, None
                            height: max(self.minimum_height, self.height)

                    GridLayout:
                        cols: 1
                        size_hint: 1, None
                        height: self.minimum_height
                        id: rezept_adder_space

                        Spirituosen_adder:
                        Spirituosen_adder:
                        
                    GridLayout:
                        cols: 3
                        size_hint: 1, None
                        height: '40dp'
                        Button:
                            text: 'Spirituose hinzufügen'
                            on_release: root.new_spirituose()
                            height: '30dp'
                        Button:
                            text: 'Spirituose hinzufügen'
                            on_release: root.new_spirituose()
                            height: '30dp'
                        


        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size_hint_y: .1
            Button:
                text: 'Abbrechen'
                on_release: root.dismiss()
            Button:
                text: 'Speichern'

<ZutatenSpinner>:
    Spinner:
        name: root.Zutatenart
        text: 'Weitere Zutat hinzufügen'
        values: root.zutatenart_list
        on_text: root.on_zutaten_spinner_select(self.text, self.name)

    Spinner:
        name: root.Zutat
        text: 'Bitte wählen'
        values: root.zutaten_list
        on_text: root.on_zutaten_spinner_select(self.text, self.name)

<Spirituosen_adder>:
    cols: 2
    size_hint: 1, .2
    height: max(self.minimum_height, self.height)

    Label:
        text_size: self.width, None
        text: 'Alkoholische Zutaten'
    Button:
        text: 'sdfgsdfgsdfgsdfg'

